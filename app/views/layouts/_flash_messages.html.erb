<%# app/views/layouts/_flash_messages.html.erb %>
<div class="fixed bottom-5 right-5 z-50 w-full max-w-sm">
  <% flash.each do |type, message| %>
    <%
      case type.to_s
      when 'notice'
        icon_color = "text-green-400"
        bg_color = "bg-green-50"
        border_color = "border-green-400"
        text_color = "text-green-800"
        icon_path = "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
      when 'alert'
        icon_color = "text-red-400"
        bg_color = "bg-red-50"
        border_color = "border-red-400"
        text_color = "text-red-800"
        icon_path = "M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
      else
        icon_color = "text-gray-400"
        bg_color = "bg-gray-50"
        border_color = "border-gray-400"
        text_color = "text-gray-800"
        icon_path = "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
      end
    %>
    <div data-controller="flash"
         class="rounded-md <%= bg_color %> p-4 shadow-lg border <%= border_color %> mb-4 transition-all duration-500 transform"
         data-transition-enter-from="opacity-0 translate-x-full"
         data-transition-enter-to="opacity-100 translate-x-0"
         data-transition-leave-from="opacity-100 translate-x-0"
         data-transition-leave-to="opacity-0 translate-x-full">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 <%= icon_color %>" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon_path %>" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium <%= text_color %>">
            <%= message %>
          </p>
        </div>
        <div class="ml-auto pl-3">
          <div class="-mx-1.5 -my-1.5">
            <button type="button" data-action="click->flash#close" class="inline-flex rounded-md <%= bg_color %> p-1.5 <%= text_color %> hover:<%= bg_color.sub('-50', '-100') %> focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-<%= bg_color.split('-').first %>-50 focus:ring-<%= bg_color.split('-').first %>-600">
              <span class="sr-only">Dismiss</span>
              <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
