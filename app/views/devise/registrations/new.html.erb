<div class="konbini-card">
  <%= image_tag 'bento.svg', alt: 'Bento Box', class: 'konbini-icon' %>
  <h2 class="konbini-title"><%= t('.title') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="konbini-field">
      <%= f.label :email, class: "sr-only" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "konbini-input", placeholder: t('.email') %>
    </div>

    <div class="konbini-field">
      <%= f.label :password, class: "sr-only" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500">(<%= t('.password_minimum', number: @minimum_password_length) %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "konbini-input", placeholder: t('.password') %>
    </div>

    <div class="konbini-field">
      <%= f.label :password_confirmation, class: "sr-only" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "konbini-input", placeholder: t('.password_confirmation') %>
    </div>

    <div class="actions">
      <%= f.submit t('helpers.submit.user.create'), class: "konbini-button" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= render "devise/shared/links" %>
  </div>
</div>

