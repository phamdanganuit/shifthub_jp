<div class="text-sm text-center space-y-2">
  <div>
    <%- if controller_name != 'sessions' %>
      <%= link_to t("devise.sessions.new.title"), new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
    <% end %>
  </div>

  <div>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to t("devise.registrations.new.title"), new_registration_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
    <% end %>
  </div>

  <div>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to t('devise.shared.links.forgot_password'), new_password_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
    <% end %>
  </div>

  <div>
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
    <% end %>
  </div>

  <div>
    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
    <% end %>
  </div>
</div>

<%- if devise_mapping.omniauthable? %>
  <div class="mt-6">
    <div class="relative">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-300"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-2 bg-white text-gray-500">
          Or continue with
        </span>
      </div>
    </div>
  </div>

  <div class="mt-6 grid grid-cols-1 gap-3">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%
        provider_name = ''
        provider_icon = ''
        case provider
        when :google_oauth2
          provider_name = 'Google'
          provider_icon = 'google_icon.svg'
        when :line
          provider_name = 'LINE'
          provider_icon = 'line_icon.svg'
        else
          provider_name = provider.to_s.humanize.titleize
        end
      %>
      <%= form_with url: omniauth_authorize_path(resource_name, provider), method: :post, data: { turbo: false } do |f| %>
        <%= f.button class: "w-full inline-flex justify-center items-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 konbini-oauth-button" do %>
          <% if provider_icon.present? %>
            <%= image_tag provider_icon, class: "h-5 w-5 mr-2" %>
          <% end %>
          <span><%= t('devise.shared.links.sign_in_with_provider', provider: provider_name) %></span>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>

