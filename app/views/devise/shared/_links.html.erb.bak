<%- if devise_mapping.omniauthable? %>
  <div class="mt-6">
    <div class="relative">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-300"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-2 bg-white text-gray-500">
          Or continue with
        </span>
      </div>
    </div>
  </div>

  <div class="mt-6 grid grid-cols-1 gap-3">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <% provider_name = case provider
                         when :google_oauth2
                           'Google'
                         when :line
                           'LINE'
                         else
                           provider.to_s.humanize.titleize
                         end %>
      <%= button_to t('devise.shared.links.sign_in_with_provider', provider: provider_name), omniauth_authorize_path(resource_name, provider), data: { turbo: false }, method: :post, class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" %>
    <% end %>
  </div>
<% end %>