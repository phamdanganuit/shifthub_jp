<div class="konbini-card">
  <%= image_tag 'onigiri.svg', alt: 'Onigiri', class: 'konbini-icon' %>
  <h2 class="konbini-title"><%= t('.title') %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="konbini-field">
      <%= f.label :email, class: "sr-only" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "konbini-input", placeholder: t('.email') %>
    </div>

    <div class="konbini-field">
      <%= f.label :password, class: "sr-only" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "konbini-input", placeholder: t('.password') %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center justify-between mb-4">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
        </div>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('.title'), class: "konbini-button" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= render "devise/shared/links" %>
  </div>
</div>

